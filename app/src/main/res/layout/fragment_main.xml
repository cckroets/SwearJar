<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/background"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_margin="16dp"
      android:orientation="horizontal">

    <com.facebook.widget.ProfilePictureView
        android:id="@+id/picture"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/welcome"
        android:gravity="center_vertical"
        android:layout_margin="8dp"
        android:text="Welcome, \nCurtis Kroetsch"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="13pt"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

  </LinearLayout>

  <FrameLayout
      android:layout_weight="1"
      android:layout_gravity="center_horizontal"
      android:layout_width="wrap_content"
      android:layout_height="0dp">

  <ImageView
      android:id="@+id/jar"
      android:layout_marginTop="0dp"
      android:layout_marginBottom="15dp"
      android:src="@drawable/jar_0_full"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <TextView
        android:visibility="invisible"
        android:id="@+id/jar_full_text"
        android:text="Jar Full!"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="16pt"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

  </FrameLayout>

  <TableLayout
      android:layout_marginBottom="15dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <TableRow>

      <TextView
          android:layout_gravity="right|center_vertical"
          android:layout_margin="8dp"
          android:text="Jar Total:"
          android:textStyle="bold"
          android:textColor="@android:color/white"
          android:textSize="10pt"
          android:layout_marginBottom="20dp"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"/>

      <TextView
          android:id="@+id/jar_total"
          android:layout_gravity="right|center_vertical"
          android:layout_margin="8dp"
          android:text="$5.25"
          android:textStyle="bold"
          android:textColor="@android:color/white"
          android:textSize="10pt"
          android:layout_marginBottom="20dp"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"/>

    </TableRow>

    <TableRow>

      <TextView
          android:layout_gravity="right|center_vertical"
          android:layout_margin="8dp"
          android:text="Maximum Amount:"
          android:textStyle="bold"
          android:textColor="@android:color/white"
          android:textSize="10pt"
          android:layout_marginBottom="20dp"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"/>

      <TextView
          android:id="@+id/jar_max"
          android:layout_gravity="right|center_vertical"
          android:layout_margin="8dp"
          android:text="$10.00"
          android:textStyle="bold"
          android:textColor="@android:color/white"
          android:textSize="10pt"
          android:layout_marginBottom="20dp"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"/>

    </TableRow>

  </TableLayout>

</LinearLayout>